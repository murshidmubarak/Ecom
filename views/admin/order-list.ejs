<%- include("../../views/partials/admin/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders - Admin Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --header-height: 60px;
            --primary-color: #cbcfda;
            --secondary-color: #858796;
            --dark-bg: #1a1a1a;
            --card-bg: #242424;
            --text-color: #e4e4e4;
            --fluorescent-green: #2b08ee;
            --gradient-green: linear-gradient(135deg, #b0aec8, rgb(120, 100, 100));
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            margin: 0;
            padding: 0;
            color: var(--text-color);
            min-height: 100vh;
        }
/* Remove all scrolling */
html, body {
    overflow: visible;
    height: auto;
}

/* Make table fit content */
.table-responsive {
    overflow: visible !important;
    overflow-x: visible !important;
}

/* Adjust table for better readability */
.table {
    width: 100%;
    table-layout: auto;
}

/* Make columns more compact */
.table td, .table th {
    padding: 8px;
    font-size: 13px;
    white-space: nowrap;
}

/* Reduce image sizes */
.table img {
    width: 40px !important;
    height: 40px !important;
}

/* Make action buttons compact */
.btn-sm {
    padding: 4px 8px;
    font-size: 12px;
}

/* Compact select dropdowns */
select.form-select {
    padding: 4px 8px;
    font-size: 12px;
}

/* Hide scrollbar everywhere */
::-webkit-scrollbar {
    display: none;
}

html {
    -ms-overflow-style: none;
    scrollbar-width: none;
}
        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            padding: 80px 30px 30px 30px;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            min-height: 100vh;
            transition: margin-left 0.3s ease;
        }

        .sidebar.collapsed + .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .page-header {
            background: var(--gradient-green);
            border-radius: 15px;
            padding: 25px 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(43, 8, 238, 0.3);
        }

        .page-header h1 {
            font-size: 2.2rem;
            color: white;
            margin: 0;
            font-weight: 700;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .search-section {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(43, 8, 238, 0.2);
            margin-top: -40px;
        }

        .search-container {
            display: flex;
            align-items: center;
            gap: 15px;
            position: relative;
        }

        .search-input-wrapper {
            position: relative;
            flex: 1;
        }

        .search-input {
            width: 100%;
            padding: 15px 50px 15px 20px;
            border: 2px solid rgba(43, 8, 238, 0.3);
            border-radius: 12px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-color);
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .search-input:focus {
            border-color: var(--fluorescent-green);
            box-shadow: 0 0 15px rgba(43, 8, 238, 0.4);
            outline: none;
        }

        .search-input::placeholder {
            color: rgba(228, 228, 228, 0.6);
        }

        .search-icon {
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
            color: var(--primary-color);
            font-size: 1.1rem;
        }

        .search-button {
            padding: 15px 25px;
            background: var(--gradient-green);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(43, 8, 238, 0.3);
        }

        .search-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(43, 8, 238, 0.4);
        }

        .table-section {
            background: var(--card-bg);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(43, 8, 238, 0.2);
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 18px 15px;
            text-align: left;
            font-size: 0.95rem;
        }

        th {
            background: linear-gradient(135deg, #e2e8f0, #cbd5e1);
            color: #334155;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: sticky;
            top: 0;
            z-index: 10;
            border-bottom: 2px solid rgba(43, 8, 238, 0.2);
        }

        td {
            border-bottom: 1px solid rgba(43, 8, 238, 0.1);
            vertical-align: top;
            color: var(--text-color);
        }

        tr:hover {
            background: rgba(43, 8, 238, 0.1);
        }

        .product-card {
            display: flex;
            gap: 15px;
            align-items: center;
            padding: 10px 0;
        }

        .product-image img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            border: 2px solid rgba(43, 8, 238, 0.3);
        }

        .product-details {
            flex: 1;
        }

        .product-name {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 5px;
        }

        .product-meta {
            font-size: 0.85rem;
            color: rgba(228, 228, 228, 0.7);
        }

        .return-note {
            color: #fbbf24;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 8px;
            padding: 5px 10px;
            background: rgba(251, 191, 36, 0.2);
            border-radius: 6px;
            display: inline-block;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin-top: 10px;
        }

        .btn {
            padding: 8px 16px;
            border-radius: 8px;
            border: none;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .approve-btn {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }

        .approve-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
        }

        .reject-btn {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
        }

        .reject-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.4);
        }

        .action-button {
            background: var(--gradient-green);
            color: white;
        }

        .action-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(43, 8, 238, 0.4);
        }

        .status-badge {
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            border: 2px solid transparent;
            cursor: pointer;
            background: var(--card-bg);
            color: #1f2937;
            transition: all 0.3s ease;
            width: 100%;
            appearance: none;
        }

        .status-confirmed { 
            background: linear-gradient(135deg, #d1fae5, #a7f3d0);
            color: #065f46;
            border-color: #10b981;
        }
        .status-pending { 
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border-color: #f59e0b;
        }
        .status-shipped { 
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            color: #1e40af;
            border-color: #3b82f6;
        }
        .status-delivered { 
            background: linear-gradient(135deg, #dcfce7, #bbf7d0);
            color: #166534;
            border-color: #22c55e;
        }
        .status-returned { 
            background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
            color: #374151;
            border-color: #6b7280;
        }
        .status-cancelled { 
            background: linear-gradient(135deg, #fee2e2, #fecaca);
            color: #991b1b;
            border-color: #ef4444;
        }
        .status-return-requested { 
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            border-color: #f59e0b;
        }

        .customer-info {
            line-height: 1.4;
        }

        .customer-name {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 4px;
        }

        .customer-meta {
            font-size: 0.85rem;
            color: rgba(228, 228, 228, 0.7);
            margin-bottom: 2px;
        }

        .order-info {
            line-height: 1.4;
        }

        .order-id {
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 4px;
        }

        .order-date {
            font-size: 0.85rem;
            color: rgba(228, 228, 228, 0.7);
        }

        .amount {
            font-size: 1.1rem;
            font-weight: 700;
            color: #10b981;
        }

        /* Improved Pagination */
        .pagination-section {
            background: var(--card-bg);
            border-radius: 15px;
            padding: 20px;
            margin-top: 25px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(43, 8, 238, 0.2);
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .page-link {
            padding: 12px 16px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-color);
            text-decoration: none;
            border: 2px solid rgba(43, 8, 238, 0.3);
            transition: all 0.3s ease;
            font-weight: 600;
            min-width: 45px;
            text-align: center;
        }

        .page-link:hover {
            background: var(--gradient-green);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(43, 8, 238, 0.4);
        }

        .page-link.active {
            background: var(--gradient-green);
            color: white;
            border-color: var(--fluorescent-green);
            box-shadow: 0 4px 15px rgba(43, 8, 238, 0.4);
        }

        .page-link.disabled {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }

        .pagination-info {
            text-align: center;
            margin-bottom: 15px;
            color: rgba(228, 228, 228, 0.8);
            font-size: 0.9rem;
        }

        .no-orders {
            text-align: center;
            padding: 60px 20px;
            color: rgba(228, 228, 228, 0.6);
            font-size: 1.1rem;
        }

        .no-orders i {
            font-size: 3rem;
            margin-bottom: 20px;
            color: rgba(43, 8, 238, 0.5);
        }

        @media (max-width: 768px) {
            .main-content {
                margin-left: 0;
                padding: 100px 15px 20px 15px;
            }
            
            .search-container {
                flex-direction: column;
                gap: 15px;
            }
            
            .search-button {
                width: 100%;
            }
            
            .table-container {
                font-size: 0.85rem;
            }
            
            th, td {
                padding: 12px 8px;
            }
            
            .product-card {
                flex-direction: column;
                text-align: center;
            }
            
            .pagination {
                flex-wrap: wrap;
                gap: 5px;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="main-content">
            <div class="container">
                <!-- <div class="page-header">
                    <h1><i class="fas fa-undo-alt me-3"></i>Returns & Refunds Management</h1>
                </div> -->

                <div class="search-section">
                    <div class="search-container">
                        <div class="search-input-wrapper">
                            <input type="text" placeholder="Search orders by ID, customer name, or email..." 
                                   class="search-input" value="<%= search %>" id="searchInput">
                            <i class="fas fa-search search-icon"></i>
                        </div>
                        <button class="search-button" onclick="triggerSearch()">
                            <i class="fas fa-search me-2"></i>Search
                        </button>
                    </div>
                </div>

                <div class="table-section">
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th><i class="fas fa-hashtag me-2"></i>Order ID</th>
                                    <th><i class="fas fa-user me-2"></i>Customer</th>
                                    <th><i class="fas fa-shopping-cart me-2"></i>Products</th>
                                    <th><i class="fas fa-rupee-sign me-2"></i>Total Amount</th>
                                    <th><i class="fas fa-info-circle me-2"></i>Status</th>
                                    <th><i class="fas fa-cogs me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orders && orders.length > 0) { %>
                                    <% orders.forEach(order => { %>
                                        <tr>
                                            <td>
                                                <div class="order-info">
                                                    <div class="order-id">#<%= order.orderId || order._id %></div>
                                                    <div class="order-date"><%= new Date(order.createdOn).toLocaleDateString() %></div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="customer-info">
                                                    <div class="customer-name"><%= order.address.name || 'No Name' %></div>
                                                    <div class="customer-meta"><%= order.address.phone || 'No Phone' %></div>
                                                    <div class="customer-meta"><%= order.userId?.email || 'No Email' %></div>
                                                </div>
                                            </td>
                                            <td>
                                                <div style="max-height: 300px; overflow-y: auto;">
                                                    <% order.orderedItems.forEach(item => { %>
                                                        <div class="product-card">
                                                            <div class="product-image">
                                                                <% if (item.product?.productImage?.length) { %>
                                                                    <img src="/uploads/<%= item.product.productImage[0] %>" 
                                                                         alt="<%= item.product.productName %>">
                                                                <% } else { %>
                                                                    <div style="width: 70px; height: 70px; background: rgba(43, 8, 238, 0.2); border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                                                                        <i class="fas fa-image" style="color: var(--primary-color); font-size: 1.5rem;"></i>
                                                                    </div>
                                                                <% } %>
                                                            </div>
                                                            <div class="product-details">
                                                                <div class="product-name"><%= item.product?.productName || 'Unknown Product' %></div>
                                                                <div class="product-meta">Quantity: <%= item.quantity %></div>
                                                                <% if (item.productStatus === 'return-requested') { %>
                                                                    <div class="return-note">
                                                                        <i class="fas fa-exclamation-triangle me-1"></i>Return Requested
                                                                    </div>
                                                                    <div class="action-buttons">
                                                                        <button class="btn approve-btn" 
                                                                                onclick="approveReturn('<%= order._id %>', '<%= item.product._id %>')">
                                                                            <i class="fas fa-check me-1"></i>Approve
                                                                        </button>
                                                                        <button class="btn reject-btn" 
                                                                                onclick="rejectReturn('<%= order._id %>', '<%= item.product._id %>')">
                                                                            <i class="fas fa-times me-1"></i>Reject
                                                                        </button>
                                                                    </div>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="amount">â‚¹<%= order.totalPrice.toFixed(2) %></div>
                                            </td>
                                            <td>
                                                <% if (order.status === 'return-requested') { %>
                                                    <div class="status-badge status-return-requested">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>Return Requested
                                                    </div>
                                                    <div class="action-buttons mt-2">
                                                        <button class="btn approve-btn" 
                                                                onclick="approveReturn('<%= order._id %>', null)">
                                                            <i class="fas fa-check me-1"></i>Approve All
                                                        </button>
                                                        <button class="btn reject-btn" 
                                                                onclick="rejectReturn('<%= order._id %>', null)">
                                                            <i class="fas fa-times me-1"></i>Reject All
                                                        </button>
                                                    </div>
                                                <% } else { %>
                                                    <!-- <select class="status-badge status-<%= order.status.toLowerCase() %>"
                                                     data-order-id="<%= order._id %>"
                                                       onchange="updateStatus(this)">
                                                       <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %> 
                                                             <%= ['shipped', 'delivered', 'returned', 'cancelled'].includes(order.status) ? 'disabled' : '' %>>Pending</option>
                                                       <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %> 
                                                             <%= ['shipped', 'delivered', 'returned', 'cancelled'].includes(order.status) ? 'disabled' : '' %>>Confirmed</option>
                                                    <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %> 
                                                             <%= ['delivered', 'returned', 'cancelled'].includes(order.status) ? 'disabled' : '' %>>Shipped</option>
                                                    <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %> 
                                                             <%= ['returned', 'cancelled'].includes(order.status) ? 'disabled' : '' %>>Delivered</option>
                                                     <option value="returned" <%= order.status === 'returned' ? 'selected' : '' %> 
                                                              <%= order.status === 'delivered' ? '' : 'disabled' %>>Returned</option>
                                                      <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %> 
                                                              <%= ['delivered', 'returned'].includes(order.status) ? 'disabled' : '' %>>Cancelled</option>
                                                      </select> -->
<%
  const lockAll = ['pending', 'cancelled', 'returned'].includes(order.status);
%>

<!-- <select class="status-badge status-<%= order.status.toLowerCase() %>"
        data-order-id="<%= order._id %>"
        onchange="updateStatus(this)">

    <option value="pending"
            disabled
            <%= order.status === 'pending' ? 'selected' : '' %>>
        Pending
    </option>

    <option value="confirmed"
            <%= order.status === 'confirmed' ? 'selected' : '' %>
            <%= lockAll ? 'disabled' : '' %>>
        Confirmed
    </option>

    <option value="shipped"
            <%= order.status === 'shipped' ? 'selected' : '' %>
            <%= lockAll ? 'disabled' : '' %>>
        Shipped
    </option>

    <option value="delivered"
            <%= order.status === 'delivered' ? 'selected' : '' %>
            <%= lockAll ? 'disabled' : '' %>>
        Delivered
    </option>

    <option value="returned"
            <%= order.status === 'returned' ? 'selected' : '' %>
            <%= lockAll || order.status !== 'delivered' ? 'disabled' : '' %>>
        Returned
    </option>

    <option value="cancelled"
            disabled
            <%= order.status === 'cancelled' ? 'selected' : '' %>>
        Cancelled
    </option>

</select> -->

<%
  const isPending   = order.status === 'pending';
  const isConfirmed = order.status === 'confirmed';
  const isShipped   = order.status === 'shipped';
  const isDelivered = order.status === 'delivered';
  const isReturned  = order.status === 'returned';
  const isCancelled = order.status === 'cancelled';
%>

<select class="status-badge status-<%= order.status.toLowerCase() %>"
        data-order-id="<%= order._id %>"
        onchange="updateStatus(this)">

    <!-- Pending (always disabled) -->
    <option value="pending"
            disabled
            <%= isPending ? 'selected' : '' %>>
        Pending
    </option>

    <!-- Confirmed -->
    <option value="confirmed"
            <%= isConfirmed ? 'selected' : '' %>
            <%= isPending || isCancelled || isReturned || isShipped || isDelivered ? 'disabled' : '' %>>
        Confirmed
    </option>

    <!-- Shipped -->
    <option value="shipped"
            <%= isShipped ? 'selected' : '' %>
            <%= isPending || isCancelled || isReturned || isDelivered ? 'disabled' : '' %>>
        Shipped
    </option>

    <!-- Delivered -->
    <option value="delivered"
            <%= isDelivered ? 'selected' : '' %>
            <%= isPending || isCancelled || isReturned ? 'disabled' : '' %>>
        Delivered
    </option>

    <!-- Returned (only after delivered) -->
    <option value="returned"
            <%= isReturned ? 'selected' : '' %>
            <%= !isDelivered ? 'disabled' : '' %>>
        Returned
    </option>

    <!-- Cancelled (always disabled) -->
    <option value="cancelled"
            disabled
            <%= isCancelled ? 'selected' : '' %>>
        Cancelled
    </option>

</select>



                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/orderDetailsAdmin?id=<%= order._id %>" class="btn action-button">
                                                    <i class="fas fa-eye me-1"></i>View Details
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="no-orders">
                                            <i class="fas fa-inbox"></i>
                                            <div>No orders found matching your criteria</div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <% if (orders && orders.length > 0) { %>
                <div class="pagination-section">
                    <div class="pagination-info">
                        Showing page <%= currentPage %> of <%= totalPages %> 
                        <% if (typeof search !== 'undefined' && search) { %>
                            (filtered results)
                        <% } %>
                    </div>
                    <div class="pagination">
                        <!-- Previous Button -->
                        <% if (currentPage > 1) { %>
                            <a href="?page=<%= currentPage - 1 %>&search=<%= search %>" class="page-link">
                                <i class="fas fa-chevron-left me-1"></i>Previous
                            </a>
                        <% } else { %>
                            <span class="page-link disabled">
                                <i class="fas fa-chevron-left me-1"></i>Previous
                            </span>
                        <% } %>

                        <!-- Page Numbers (Show max 3 pages) -->
                        <% 
                            let startPage = Math.max(1, currentPage - 1);
                            let endPage = Math.min(totalPages, startPage + 2);
                            
                            // Adjust start if we're near the end
                            if (endPage - startPage < 2) {
                                startPage = Math.max(1, endPage - 2);
                            }
                        %>

