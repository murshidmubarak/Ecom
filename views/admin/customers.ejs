<%- include("../partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Add SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --header-height: 60px;
            --primary-color: #cbcfda;
            --secondary-color: #858796;
            --dark-bg: #1a1a1a;
            --card-bg: #242424;
            --text-color: #e4e4e4;
            --fluorescent-green: #2b08ee;
            --gradient-green: linear-gradient(135deg, #b0aec8, rgb(120, 100, 100));
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .content {
            margin-left: var(--sidebar-width);
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        .search-bar {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .search-bar input {
            width: 100%;
            max-width: 300px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid var(--secondary-color);
            background-color: var(--card-bg);
            color: var(--text-color);
        }

        .users-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .users-table th, .users-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid var(--secondary-color);
        }

        .users-table th {
            background-color: var(--card-bg);
        }

        .users-table tr:hover {
            background-color: var(--card-bg);
        }

        .btn {
            padding: 5px 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            color: white;
            font-size: 14px;
        }

        .btn-block {
            background-color: #dc3545;
        }

        .btn-unblock {
            background-color: #28a745;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination a {
            margin: 0 5px;
            padding: 8px 12px;
            text-decoration: none;
            color: var(--text-color);
            background-color: var(--card-bg);
            border-radius: 5px;
        }

        .pagination a:hover {
            background-color: var(--gradient-green);
        }

        .pagination .current-page {
            margin: 0 10px;
            padding: 8px 12px;
            color: var(--text-color);
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .content {
                margin-left: var(--sidebar-collapsed-width);
            }

            .search-bar input {
                width: 100%;
            }
        }

        @media (max-width: 480px) {
            .content {
                margin-left: 0;
            }

            .users-table th, .users-table td {
                padding: 8px;
                font-size: 14px;
            }

            .btn {
                padding: 4px 8px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <%- include("../partials/admin/header") %>
    
    <div class="content">
        <!-- Search Bar -->
        <div class="search-bar">
            <form action="/admin/users" method="GET">
                <input type="text" name="search" placeholder="Search users..." value="<%= search %>">
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- Users Table -->
        <table class="users-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.email %></td>
                        <td>
                            <% if (user.isBlocked) { %>
                                <button class="btn btn-unblock" onclick="toggleBlock('<%= user._id %>', false)">Unblock</button>
                            <% } else { %>
                                <button class="btn btn-block" onclick="toggleBlock('<%= user._id %>', true)">Block</button>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/admin/users?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
            <% } %>
            <span>Page <%= currentPage %> of <%= totalPages %></span>
            <% if (currentPage < totalPages) { %>
                <a href="/admin/users?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
            <% } %>
        </div>
    </div>

    <script>
        async function toggleBlock(userId, blockStatus) {
            try {
                // Show confirmation dialog
                const actionText = blockStatus ? 'block' : 'unblock';
                const result = await Swal.fire({
                    title: `Are you sure?`,
                    text: `Do you want to ${actionText} this user?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Yes, ${actionText} it!`
                });

                // If user confirms
                if (result.isConfirmed) {
                    const response = await fetch(`/admin/users/${userId}/block`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ block: blockStatus })
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Show success message
                        await Swal.fire({
                            title: `${actionText.charAt(0).toUpperCase() + actionText.slice(1)}ed!`,
                            text: `User has been ${actionText}ed successfully`,
                            icon: 'success',
                            timer: 1500,
                            showConfirmButton: false
                        });
                        
                        // Reload page to reflect changes
                        location.reload();
                    } else {
                        throw new Error(data.message || 'Failed to update user status');
                    }
                }
            } catch (error) {
                // Show error message
                Swal.fire({
                    title: 'Error!',
                    text: error.message || 'Something went wrong',
                    icon: 'error'
                });
            }
        }
    </script>
</body>
</html>