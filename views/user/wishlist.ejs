<%- include("../../views/partials/user/header") %>
<main class="main">
    <!-- Breadcrumb -->
    <meta name="csrf-token" content="<%= csrfToken %>">
    <div class="page-header breadcrumb-wrap" style="background-color: #f8f9fa; padding: 20px 0;">
        <div class="container">
            <div class="breadcrumb" style="font-size: 14px; color: #666;">
                <a href="/" rel="nofollow" style="color: #007bff; text-decoration: none;">Home</a>
                <span style="margin: 0 5px;">/</span> Shop
                <span style="margin: 0 5px;">/</span> My Wishlist
            </div>
        </div>
    </div>

    <!-- Wishlist Section -->
    <section class="wishlist-section" style="padding: 50px 0;">
        <div class="container">
            <h2 class="section-title text-center" style="font-size: 28px; font-weight: 700; color: #333; margin-bottom: 30px;">My Wishlist</h2>
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive wishlist-table">
                        <table class="table shopping-summery text-center mb-0">
                            <thead>
                                <tr class="main-heading d-none d-md-table-row" style="background-color: #f8f9fa; color: #333; font-weight: 600; text-transform: uppercase; font-size: 14px;">
                                    <th scope="col" class="py-3">Image</th>
                                    <th scope="col" class="py-3">Name</th>
                                    <th scope="col" class="py-3">Price</th>
                                    <th scope="col" class="py-3">Add to Cart</th>
                                    <th scope="col" class="py-3">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (products && products.length > 0) { %>
                                    <% products.forEach(product => { %>
                                        <tr id="wishlist-row-<%= product._id %>" class="border-bottom">
                                            <!-- Mobile-friendly stacked layout on small screens -->
                                            <td class="p-3 p-md-4 text-md-center">
                                                <img src="/uploads/<%= product.productImage && product.productImage[0] ? product.productImage[0] : 'default.jpg' %>" 
                                                     alt="<%= product.productName || 'Product' %>" 
                                                     class="img-fluid rounded" 
                                                     style="width: 80px; height: 80px; object-fit: contain; border: 1px solid #e9ecef;" />
                                            </td>
                                            <td class="p-3 p-md-4 text-md-center align-middle">
                                                <h5 class="product-name mb-1">
                                                    <a href="/productDetails?id=<%= product._id %>" class="text-decoration-none text-dark">
                                                        <%= product.productName || 'Unnamed Product' %>
                                                    </a>
                                                </h5>
                                                <div class="d-md-none text-muted small mt-2">
                                                    <strong>Price:</strong> ₹<%= product.salePrice ? product.salePrice.toFixed(2) : 'N/A' %><br/>
                                                    <a href="#" onclick="addToCart('<%= product._id %>'); event.preventDefault();" 
                                                       class="btn btn-sm btn-primary mt-2 d-block">Add to Cart</a>
                                                    <button onclick="removeFromWishlist('<%= product._id %>')" 
                                                            class="btn btn-sm btn-outline-danger mt-2 d-block">
                                                        <i class="fa fa-trash"></i> Remove
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="price p-3 p-md-4 align-middle d-none d-md-table-cell">
                                                <span class="fw-medium text-primary">₹<%= product.salePrice ? product.salePrice.toFixed(2) : 'N/A' %></span>
                                            </td>
                                            <td class="p-3 p-md-4 align-middle text-center d-none d-md-table-cell">
                                                <a href="#" onclick="addToCart('<%= product._id %>')" 
                                                   class="btn btn-sm btn-primary px-4">Add to Cart</a>
                                            </td>
                                            <td class="p-3 p-md-4 align-middle text-center d-none d-md-table-cell">
                                                <button onclick="removeFromWishlist('<%= product._id %>')" 
                                                        class="btn btn-sm btn-outline-danger rounded-circle">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center py-5">
                                            <p class="lead mb-3 fw-medium">No items found in Wishlist</p>
                                            <a href="/shop" class="text-primary">Start Shopping Now</a>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<%- include("../../views/partials/user/footer") %>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    async function addToCart(productId) {
        try {
            const response = await fetch(`/addToCart`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify({ productId })
            });

            if (!response.ok) throw new Error(`HTTP error! Status: ${response.status}`);

            const data = await response.json();

            if (data.outOfStock) {
                await Swal.fire({
                    title: 'Out of Stock!',
                    text: 'Sorry, this product is currently out of stock.',
                    icon: 'error',
                    confirmButtonColor: '#088178'
                });
            } else if (data.alreadyInCart) {
                await Swal.fire({
                    title: 'Already in Cart!',
                    text: 'This product is already in your cart.',
                    icon: 'info',
                    confirmButtonColor: '#088178',
                    confirmButtonText: 'View Cart',
                    showCancelButton: true,
                    cancelButtonText: 'Continue Shopping'
                }).then((result) => {
                    if (result.isConfirmed) window.location.href = '/cart';
                });
            } else if (data.success) {
                await Swal.fire({
                    title: 'Added!',
                    text: 'The product has been added to your cart and removed from your wishlist.',
                    icon: 'success',
                    confirmButtonColor: '#088178',
                    showDenyButton: true,
                    denyButtonText: 'View Cart',
                    denyButtonColor: '#2c3e50'
                }).then((result) => {
                    if (result.isDenied) {
                        window.location.href = '/cart';
                    } else {
                        window.location.reload();
                    }
                });
            } else {
                await Swal.fire({
                    title: 'Error!',
                    text: data.message || 'Failed to add the product to your cart.',
                    icon: 'error',
                    confirmButtonColor: '#088178'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            await Swal.fire({
                title: 'Error!',
                text: 'Something went wrong. Please try again later.',
                icon: 'error',
                confirmButtonColor: '#088178'
            });
        }
    }

    async function removeFromWishlist(productId) {
        try {
            const response = await fetch('/removeFromWishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify({ productId })
            });

            const result = await response.json();

            if (result.status) {
                Swal.fire({
                    icon: 'success',
                    title: 'Removed from Wishlist',
                    text: result.message,
                    timer: 1200,
                    showConfirmButton: false
                });

                const row = document.getElementById(`wishlist-row-${productId}`);
                if (row) row.remove();

                if (document.querySelectorAll("tbody tr:not([style*='display: none'])").length === 0) {
                    document.querySelector("tbody").innerHTML = `
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <p class="lead mb-3">No items found in Wishlist</p>
                                <a href="/shop">Start Shopping Now</a>
                            </td>
                        </tr>`;
                }
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong'
            });
        }
    }
</script>

<style>
    .wishlist-section {
        min-height: calc(100vh - 300px);
        background-color: #f5f6f8;
    }

    .wishlist-table {
        border: 1px solid #e9ecef;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn.btn-sm.btn-outline-danger:hover {
        background-color: #dc3545 !important;
        color: #fff !important;
        border-color: #dc3545 !important;
    }

    /* Responsive adjustments */
    @media (max-width: 767px) {
        .section-title {
            font-size: 24px;
        }
        
        .img-fluid {
            max-width: 70px;
            height: 70px;
        }

        .product-name {
            font-size: 15px;
        }

        /* Make table rows behave like cards on mobile */
        .table tr {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            overflow: hidden;
        }

        .table td {
            border: none;
            text-align: center;
        }
    }
</style>