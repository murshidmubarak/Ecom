<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Change Password</title>
  <style>
    /* Ensure full height for centering */
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }

    /* Main container styling */
    .content-main {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 20px;
      background-color: #f5f5f5;
    }

    /* Card styling */
    .card-login {
      width: 100%;
      max-width: 400px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    /* Card body */
    .card-body {
      padding: 0;
    }

    /* Title */
    .card-title {
      font-size: 1.75rem;
      margin-bottom: 20px;
      text-align: center;
      color: #333;
    }

    /* Form group styling */
    .mb-3 {
      margin-bottom: 20px;
      position: relative;
    }

    /* Input fields */
    .form-control {
      width: 100%;
      padding: 10px;
      font-size: 1rem;
      border: 1px solid #ced4da;
      border-radius: 5px;
      box-sizing: border-box;
    }

    .form-control:focus {
      outline: none;
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    /* Error messages */
    .text-danger {
      color: #dc3545;
      font-size: 0.875rem;
      position: absolute;
      bottom: -20px;
      left: 0;
    }

    /* Submit button */
    .btn-primary {
      width: 100%;
      padding: 12px;
      font-size: 1rem;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }

    /* Alert message */
    .alert-danger {
      width: 100%;
      padding: 10px;
      font-size: 0.875rem;
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      border-radius: 5px;
      text-align: center;
      margin-bottom: 20px;
    }

    /* Signup link */
    .text-center {
      text-align: center;
      font-size: 0.875rem;
      margin-top: 20px;
    }

    .text-center a {
      color: #007bff;
      text-decoration: none;
    }

    .text-center a:hover {
      text-decoration: underline;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .card-login {
        max-width: 350px;
        padding: 15px;
      }

      .card-title {
        font-size: 1.5rem;
      }

      .form-control {
        font-size: 0.9rem;
        padding: 8px;
      }

      .btn-primary {
        font-size: 0.9rem;
        padding: 10px;
      }

      .text-danger {
        font-size: 0.75rem;
      }
    }

    @media (max-width: 480px) {
      .content-main {
        padding: 10px;
      }

      .card-login {
        max-width: 100%;
        margin: 0 10px;
        padding: 10px;
      }

      .card-title {
        font-size: 1.25rem;
      }

      .form-control {
        font-size: 0.85rem;
        padding: 6px;
      }

      .btn-primary {
        font-size: 0.85rem;
        padding: 8px;
      }

      .text-danger {
        font-size: 0.7rem;
        bottom: -18px;
      }

      .alert-danger {
        font-size: 0.75rem;
      }

      .text-center {
        font-size: 0.75rem;
      }
    }
  </style>
</head>
<body>
  <section class="content-main">
    <div class="card-login">
      <div class="card-body">
        <h4 class="card-title">Change Password</h4>
        <form method="POST" action="/reset-password" onsubmit="return validateForm()">
          <div class="mb-3 position-relative">
            <input class="form-control" name="newPass1" id="newPass1" placeholder="Enter new password" type="password" >
            <div id="newPass1Error" class="text-danger"></div>
          </div>
          <div class="mb-3 position-relative">
            <input class="form-control" name="newPass2" id="newPass2" placeholder="Re-enter new password" type="password" >
            <div id="newPass2Error" class="text-danger"></div>
          </div>
          <div class="mb-4">
            <button type="submit" class="btn-primary">Change Password</button>
          </div>
          <!-- Static alert for testing; replace with server-side logic if needed -->
          <!-- <div id="alertMessage" class="alert alert-danger">Example error message</div> -->
        </form>
        <p class="text-center">Don't have an account? <a href="/signup">Sign up</a></p>
      </div>
    </div>
  </section>

  <script>
    function validateForm() {
      let valid = true;
      const newPass1 = document.getElementById('newPass1');
      const newPass2 = document.getElementById('newPass2');
      const newPass1Error = document.getElementById('newPass1Error');
      const newPass2Error = document.getElementById('newPass2Error');

      // Clear previous error messages
      newPass1Error.textContent = '';
      newPass2Error.textContent = '';

      // Validate newPass1
      if (!newPass1.value.trim()) {
        newPass1Error.textContent = 'Password cannot be empty.';
        valid = false;
      } else if (newPass1.value.length < 6) {
        newPass1Error.textContent = 'Password must be at least 6 characters long.';
        valid = false;
      }

      // Validate newPass2
      if (!newPass2.value.trim()) {
        newPass2Error.textContent = 'Please re-enter your password.';
        valid = false;
      } else if (newPass2.value !== newPass1.value) {
        newPass2Error.textContent = 'Passwords do not match.';
        valid = false;
      }

      return valid;
    }
  </script>
</body>
</html>